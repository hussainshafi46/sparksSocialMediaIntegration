<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CircularImage">
        <item name="cornerSize">50%</item>
    </style>
    <style name="LoginButtons" parent="Widget.MaterialComponents.Button.Icon">
        <item name="shapeAppearance">@style/CircularImage</item>
        <item name="strokeColor">@color/com_facebook_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">#a8e063</item>
        <item name="iconTint">#cc2b5e</item>
        <item name="iconGravity">start</item>
        <item name="android:textColor">#753a88</item>
        <item name="elevation">8dp</item>
    </style>
</resources>